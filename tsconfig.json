{
  "compilerOptions": {
    "target": "es5",
    "lib": ["DOM", "ES2015", "ES2016", "ES5", "ES6"],
    //"allowJs": true,
    "outDir": "build",
    //"rootDir": "src",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    //"isolatedModules": true,
    "jsx": "react"
  },
  "include": ["src", "index.ts"],
  "exclude": ["node_modules"]
}
